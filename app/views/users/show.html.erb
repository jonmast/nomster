<div class="booyah-box clearfix">
  <div class="col-xs-4">
    <%= image_tag 'user.svg', width: 120, height: 120 %>
  </div>
  <div class="col-xs-8">
    <h1><%= @user.email %></h1>
    <h3>Member Since <%= @user.created_at.strftime('%B %d, %Y') %></h3>
    <h4><%= @user.comments.count %> total comments</h4>
    <h4><%= @user.comments.where(rating: '5_stars').count %> total 5 star reviews</h4>
  </div>
</div>

<br /><br />
<h1 class="text-center">My Comments</h1>
<br /><br />
<%= render @user.comments %>

<br /><br />
<h2 class="text-center">My Places</h2>
<br /><br />

<% @user.places.each do |place| %>
  <div class="booyah-box col-xs-10 col-xs-offset-1">
    <h1><%= place.name %></h1>
    <i><%= place.address %></i>
    <br /><br />
    <p><%= place.description %></p>
  </div>
<% end %>
